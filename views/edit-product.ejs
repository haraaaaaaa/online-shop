<%- include("includes/head.ejs") %>
<link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%- include("includes/navbar.ejs") %>
    <form class="form" action="/admin/products/<%= product._id %>/edit" method="post">
        <h1 class="form__header">Edit Product</h1>
        <div class="form__control">
            <label for="title">Title</label>
        <input type="text" placeholder="Title" name="title" value="<%= product.title %>">
        </div>
        
        <div class="form__control">
            <label for="imgUrl">Image Url</label>
            <input type="text" placeholder="imgUrl" name="imgUrl" value="<%= product.imgUrl %>">
        </div>
        
        <div class="form__control">
            <label for="description">Description</label>
            <textarea name="description" id="" cols="30" rows="10"><%= product.description %></textarea>
        </div>

        <div class="form__control">
            <select name="category" id="">
                <% for(const category of categories){ %>
                    <option value="<%= category._id %>"><%= category.name %></option>
                <% } %>
            </select>
        </div>
        
        <div class="form__control">
            <label for="price">Price</label>
            <input type="number" placeholder="Price" name="price" value="<%= product.price %>">
        </div>
        
        <div class="form__action">
            <button type="submit">Edit Product</button>
        </div>
    </form>
</body>
</html>